				type="number"
				name="filter_min_athletes"
				placeholder="100"
				min="0"
				hx-get="/search/results"
				hx-trigger="keyup changed delay:500ms"
				hx-target="#search-results"
				hx-include="[name='query'], [name='category'], [name^='filter_']"
			/>
		</div>
	</div>
}
