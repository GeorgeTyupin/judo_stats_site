package components

templ InfoItem(label, value string) {
	<div class="bg-gray-50 rounded-lg p-4">
		<div class="text-sm text-gray-500 mb-1">{ label }</div>
		<div class="text-lg font-semibold text-gray-900">{ value }</div>
	</div>
}

