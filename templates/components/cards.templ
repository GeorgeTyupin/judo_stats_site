package components

templ StatCard(icon, number, label string) {
	<div class="bg-white rounded-xl shadow-lg p-8 text-center transform hover:scale-105 transition-transform duration-300">
		<div class="text-5xl mb-4">{ icon }</div>
		<div class="text-4xl font-bold text-gray-900 mb-2">{ number }</div>
		<div class="text-gray-600 font-medium">{ label }</div>
	</div>
}

templ FeatureCard(icon, title, description string) {
	<div class="bg-white rounded-xl shadow-md p-8 hover:shadow-xl transition-shadow duration-300">
		<div class="text-5xl mb-4">{ icon }</div>
		<h3 class="text-xl font-bold text-gray-900 mb-3">{ title }</h3>
		<p class="text-gray-600 leading-relaxed">{ description }</p>
	</div>
}

