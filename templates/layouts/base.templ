package layouts

templ Base(title string, pageCSS ...string) {
	@BaseWithJS(title, nil, pageCSS...)
}

templ BaseWithJS(title string, pageJS []string, pageCSS ...string) {
	<!DOCTYPE html>
	<html lang="ru">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title } - Архив Дзюдо</title>
			<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet"/>
			<link rel="stylesheet" href="/static/css/style.css"/>
			for _, css := range pageCSS {
				<link rel="stylesheet" href={ templ.URL("/static/css/" + css) }/>
			}
			<script src="https://unpkg.com/htmx.org@1.9.10"></script>
			<script src="https://unpkg.com/lucide@latest"></script>
		</head>
		<body>
			@Header()
			<main>
				{ children... }
			</main>
			@Footer()
			if pageJS != nil {
				for _, js := range pageJS {
					<script src={ templ.URL("/static/js/" + js) }></script>
				}
			}
			<script>
				lucide.createIcons();
			</script>
		</body>
	</html>
}

templ Header() {
	<header>
		<div class="header-top">
			<div class="container">
				<div class="header-top-contacts">
					<span class="flex-align-center"><i data-lucide="mail" class="icon-sm"></i> info@judoarchive.com</span>
					<span class="flex-align-center"><i data-lucide="phone" class="icon-sm"></i> +7 (XXX) XXX-XX-XX</span>
				</div>
				<div>
					<a href="/contribute">Добавить информацию</a>
					<a href="/contribute">Обратная связь</a>
				</div>
			</div>
		</div>
		<div class="header-main">
			<div class="container">
				<div class="header-content">
					<a href="/" class="logo flex-align-center-gap-10"><i data-lucide="medal" class="icon-2xl"></i> Архив Дзюдо</a>
					<nav>
						<ul>
							<li><a href="/">Главная</a></li>
							<li><a href="/search">Поиск</a></li>
							<li><a href="/news">Новости</a></li>
							<li><a href="/tournaments">Турниры</a></li>
							<li><a href="/contribute">Добавить данные</a></li>
							<li><a href="/about">О проекте</a></li>
						</ul>
					</nav>
				</div>
			</div>
		</div>
	</header>
}

